@model Floral_Shop.Models.Occasion

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="text-center mb-4">Occasion Details</h1>
            <div class="card">
                <div class="card-body">
                    <h4>Details</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4 font-weight-bold">
                            @Html.DisplayNameFor(model => model.Name)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Name)
                        </dd>
                    </dl>
                </div>
            </div>

            <div class="text-center mt-4">
                <a asp-action="Edit" asp-route-id="@Model?.OccasionId" class="btn btn-primary mx-2">Edit</a>
                <a asp-action="Index" class="btn btn-secondary mx-2">Back to List</a>
            </div>
        </div>
    </div>
</div>
