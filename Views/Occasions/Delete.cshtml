@model Floral_Shop.Models.Occasion

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="text-center mb-4">Delete Occasion</h1>
            <h3 class="text-center text-danger">Are you sure you want to delete this?</h3>
            <div class="card mt-4">
                <div class="card-body">
                    <h4>Occasion Details</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4 font-weight-bold">
                            @Html.DisplayNameFor(model => model.Name)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Name)
                        </dd>
                    </dl>
                </div>
            </div>

            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="OccasionId" />
                <div class="text-center">
                    <input type="submit" value="Delete" class="btn btn-danger mx-2" />
                    <a asp-action="Index" class="btn btn-secondary mx-2">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>
