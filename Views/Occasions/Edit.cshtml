@model Floral_Shop.Models.Occasion

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="text-center mb-4">Edit Occasion</h1>
            <h4 class="text-center">Occasion Information</h4>
            <hr />
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Hidden OccasionId -->
                <input type="hidden" asp-for="OccasionId" />

                <!-- Name Input -->
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <!-- Submit Button -->
                <div class="form-group text-center">
                    <input type="submit" value="Save" class="btn btn-primary mx-2" />
                    <a asp-action="Index" class="btn btn-secondary mx-2">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>
