@model List<Floral_Shop.Models.CartItem> 

<h2>Your Cart</h2>

<table class="table">
    <thead>
        <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Total Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td><img src="~/assets/images/Flower products/@item.Image" alt="@item.Name" width="50" /></td>
                <td>@item.Name</td>
                <td>$@item.Price</td>
                <td>@item.Quantity</td>
                <td>$@item.TotalPrice</td>
            </tr>
        }
    </tbody>
</table>

